# Application
APP_NAME="Marketing AI Assessment System"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_VERSION=2.0.0

# Database
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=marketing_ai
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# JWT Authentication
JWT_SECRET=your-secret-key-min-32-characters-long
JWT_ACCESS_TTL=3600
JWT_REFRESH_TTL=2592000
JWT_ALGORITHM=HS256

# Security
BCRYPT_COST=12
RATE_LIMIT_MAX=120
RATE_LIMIT_WINDOW=60
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=300

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# File Storage
STORAGE_PATH=./storage
REPORTS_PATH=./storage/reports
LOGS_PATH=./storage/logs

# Email Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=
MAIL_FROM=noreply@example.com
MAIL_FROM_NAME="Marketing AI System"

# Cache
CACHE_DRIVER=file
CACHE_PATH=./storage/cache
CACHE_TTL=3600

# AI Engine
AI_ENGINE_VERSION=2.0
MAX_QUESTIONS=250
SESSION_TIMEOUT=7200
